<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.DishMapper">
    <resultMap id="DishVOMap" type="com.sky.vo.DishVO" autoMapping="true">
        <id column="id" property="id"/>
        <result column="category_name" property="categoryName"/>
        <collection property="flavors" javaType="com.sky.entity.DishFlavor" autoMapping="true">
            <id column="dish_flavor_id" property="id"/>
            <result column="dish_flavor_name" property="name"/>
        </collection>
    </resultMap>
    
    <select id="getDishVoList" resultMap="DishVOMap">
        select d.id,
               d.name,
               d.category_id,
               d.price,
               d.image,
               d.description,
               d.status,
               d.update_time,
               c.name as category_name,
               df.id as dish_flavor_id,
               df.dish_id,
               df.name as dish_flavor_name,
               df.value
        from dish d
                 join category c on d.category_id = c.id
                 left join dish_flavor df on d.id = df.dish_id
        <where>
            <if test="name != null and name != ''">
                and d.name like concat('%', #{name}, '%')
            </if>
            <if test="categoryId != null">
                and d.category_id = #{categoryId}
            </if>
            <if test="status != null">
                and d.status = #{status}
            </if>
        </where>
        order by d.id
    </select>
    <select id="getSellingDishListByIds" resultType="java.lang.Long">
        select
            id
        from dish
        where status = 1
        and id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

    <delete id="deleteByIds">
        delete
        from dish
        where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
</mapper>
